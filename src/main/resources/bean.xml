<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=" http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="Movie" class="com.stackroute.spring.bean.Movie" autowire="byName"></bean>
    <bean id="actor1" class="com.stackroute.spring.bean.Actor">
        <constructor-arg name="name" value="Hrithik roshan"/>
        <constructor-arg name="gender" value="male"/>
        <constructor-arg name="age" value="40"/>
    </bean>
    <bean id="actor2" class="com.stackroute.spring.bean.Actor">
        <constructor-arg name="name" value="Sharuk khan"/>
        <constructor-arg name="gender" value="male"/>
        <constructor-arg name="age" value="50"/>
    </bean>
    <bean id="actor3" class="com.stackroute.spring.bean.Actor">
        <constructor-arg name="name" value="Deepika padukone"/>
        <constructor-arg name="gender" value="female"/>
        <constructor-arg name="age" value="30"/>
    </bean>



</beans>
